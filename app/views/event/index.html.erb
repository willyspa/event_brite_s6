<!doctype html>
<link href="jumbotron.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="album.css" rel="stylesheet">
  <body>
      <!-- Main jumbotron for a primary marketing message or call to action -->
<main role="main">
  <br><br>

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Discover, live, learn, have fun !</h1>
          <p class="lead text-muted">Create your own event to share your lifestyle ! What do you want to do ?</p>
          <p>
          <p><a class="btn btn-primary btn-lg" href="<%=  new_event_path %>" role="button">Create event &raquo;</a></p>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
          <% @event.reverse.each do |e| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-body">
                <small class="text-muted"></b> <%= e.start_date.strftime("%m/%d/%Y") %></small>

                  <p class="card-title"><b>Event de  <%= User.find_by(id:e.admin_event_id).first_name %>-<%= User.find_by(id:e.admin_event_id).last_name %> : </b><%= e.title %></p>
                  <p class="card-text"><%= e.description %></p>


                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a class="btn btn-outline-primary btn-sm" href="<%=  event_path(id:e.id)%>" role="button">More about the event &raquo;</a>
                    </div>
                  <small class="text-muted"><b>prix:</b> <%= e.price %>â‚¬</small>
                  </div>
                </div>
              </div>
            </div>
          <%end%>

      </div> <!-- /container -->

    </main>

    <footer class="container">
      <p>&copy; Willyacinliya</p>
    </footer>

  </body>
</html>
